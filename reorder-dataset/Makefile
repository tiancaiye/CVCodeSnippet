#------------------------------------------------------------------------
#	Set the cxxflags and dependent libs
#------------------------------------------------------------------------
CXXFLAGS = -O2 -g -Wall -fmessage-length=0 -std=c++1y

#------------------------------------------------------------------------
#	Set the objective bin names and dependences
#------------------------------------------------------------------------
OBJ = reorder_dataset.o utils.o
BIN = reorder_dataset

#------------------------------------------------------------------------
#	Target
#------------------------------------------------------------------------
all: $(BIN)

$(BIN): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $^
	
#------------------------------------------------------------------------
#	Clean
#------------------------------------------------------------------------
clean:
	rm -f ./*.o $(BIN)
.PHONY: clean
